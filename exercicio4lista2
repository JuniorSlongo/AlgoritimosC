/*Escrever um algoritmo que lÃª um valor N inteiro e positivo e que calcula e escreve o valor de E:   
	E = 1 + 1 / 1 + 1 / 2 + .. + 1 / N
*/
#include <stdio.h>
#include <math.h>
int main(){

    float result, n, cont;
    result = 1.0;
    cont = 1;
    printf("informe o valor de N: ");
    scanf("%f", &n);
    while (cont <= n)
    {
        result = result + (1./cont);
        cont=cont+1;
        
    }
    printf("%.5f\n", result); 
}
